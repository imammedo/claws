<?xml version="1.0" standalone="no"?>
<app-bundle>

  <meta>
    <prefix name="default">${env:JHBUILD_PREFIX}</prefix>
    <prefix name="prog">${env:stage_dir}/@prefix@</prefix>
    <prefix name="x11">/opt/X11</prefix>
    <destination overwrite="yes">${env:PWD}</destination>
    <run-install-name-tool/>
  </meta>

  <plist>${project}/claws-mail.plist</plist>
  <main-binary>${prefix:prog}/bin/claws-mail</main-binary>
  <launcher-script>${project}/claws-mail-launcher.sh</launcher-script>

  <binary>
     ${prefix}/lib/${gtkdir}/modules/*.so
  </binary>

  <binary>
    ${prefix}/lib/${gtkdir}/${pkg:${gtk}:gtk_binary_version}/engines/*.so
  </binary>

  <binary>
    ${prefix}/lib/${gtkdir}/${pkg:${gtk}:gtk_binary_version}/printbackends/*.so
  </binary>

  <binary>
    ${prefix}/lib/gdk-pixbuf-2.0/${pkg:${gtk}:gtk_binary_version}/loaders/*.so
  </binary>

  <binary>
    ${prefix}/lib/pango/${pkg:pango:pango_module_version}/modules/
  </binary>

  <translations name="gtk20">
    ${prefix}/share/locale
  </translations>

  <data dest='${bundle}/Contents/Resources/etc/gtk-2.0/gtkrc'>
	  ${prefix}/share/themes/Clearlooks/gtk-2.0/gtkrc
  </data>

  <data>
    ${prefix}/share/themes
  </data>

  <data dest="${bundle}/Contents/Resources">
    ${project}/claws-mail.icns
  </data>

  <binary>
     ${prefix:prog}/lib/claws-mail/plugins/*.so
  </binary>

  <data>
     ${prefix:prog}/share/icons
  </data>

  <binary>
     ${prefix}/lib/libpyglib-2.0-python.0.dylib
  </binary>

  <data>
     ${prefix}/lib/python2.7/
  </data>

  <icon-theme icons="auto">
    Adwaita
  </icon-theme>

</app-bundle>
